<body>

<h2>Sacred Landscapes of Central India</h2>

<div id="map"></div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
const map = L.map('map').setView([23.5, 78.5], 6);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  attribution: '© OpenStreetMap'
}).addTo(map);

const places = [
  {
    name: "Ujjain",
    coords: [23.1765, 75.7885],
    link: "/blog/ujjain",
    text: "City of Mahakala and celestial time"
  },
  {
    name: "Vidisha",
    coords: [23.5251, 77.8081],
    link: "/blog/vidisha",
    text: "Gateway to Gupta sacred landscapes"
  },
  {
    name: "Udayagiri",
    coords: [23.5244, 77.7296],
    link: "/blog/udayagiri",
    text: "Caves of cosmic kingship"
  },
  {
    name: "Amarkantak",
    coords: [22.6749, 81.7596],
    link: "/blog/amarkantak",
    text: "Source of the Narmada"
  },
  {
    name: "Ramtek",
    coords: [21.3972, 79.3271],
    link: "/blog/ramtek",
    text: "Land of Rama’s exile"
  }
];

places.forEach(p => {
  L.marker(p.coords).addTo(map)
    .bindPopup(`
      <strong>${p.name}</strong><br>
      <em>${p.text}</em><br><br>
      <a href="${p.link}">Explore →</a>
    `);
});
</script>

</body>
</html>
